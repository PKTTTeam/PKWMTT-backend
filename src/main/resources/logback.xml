<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- File path property -->
    <property name="LOG_PATH" value="logs/app.log" />

    <!-- Register built-in color/Highlight converters -->
    <conversionRule conversionWord="highlight"
                    converterClass="org.pkwmtt.config.HighlightingCompositeLogConverter"/>

    <!-- Console appender: logs INFO+ with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- enable ANSI codes for real terminals -->
        <withJansi>false</withJansi>
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- File appender: only ERROR -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- Root logger: DEBUG to console (filtered to INFO), ERROR to file -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
